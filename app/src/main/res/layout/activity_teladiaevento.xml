<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teladiaevento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vitor.geracaodosomgds.teladiaevento">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="353dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layoutDia">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDia"
            android:textSize="100sp"
            android:textAlignment="center"
            android:text="28"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <TextView
        android:text="ARTISTAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtArtistas"
        android:textSize="70sp"
        android:textStyle="normal|bold"
        android:layout_gravity="top|left"
        android:gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="144dp"
        android:paddingLeft="16sp"/>

    <TextView
        android:text="alfa - folkmetal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtArtistaEvento"
        android:layout_below="@+id/txtArtistas"
        android:layout_alignParentStart="true"
        android:textSize="40sp"
        android:paddingLeft="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInfoEvento"
        android:text="aadadadasdadasdasddsadsadsaasdasdasdsasdasasdasdasdasddasdasdasdasdasdasdasdss"
        android:layout_below="@id/txtArtistaEvento"
        android:textSize="28sp"
        android:paddingLeft="18sp"
        android:textAlignment="center" />

    <Button
        android:text="RESERVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReserva"
        android:layout_below="@+id/txtInfoEvento"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:onClick="abreReserva"/>

</RelativeLayout>
